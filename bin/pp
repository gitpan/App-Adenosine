#!/usr/bin/env perl

# PODNAME: pp

# App-PipeFilter is probably worth looking at

use strict;
use warnings;

use FindBin '$Bin';
use lib "$Bin/../lib";
use lib "$Bin/../extlib/lib/perl5";

use JSON;
while (<>) {
   eval {
      my $j = JSON->new->pretty->allow_nonref;
      print $j->encode($j->decode($_));
      1
   } || print "$_\n"
}

__END__

=pod

=encoding UTF-8

=head1 NAME

pp

=head1 VERSION

version 2.001007

